<resources>

    <style name="AppTheme" parent="base_activity_style"></style>

    <style name="main_activity" parent="base_activity_style" />

    <style name="swipe_activity" parent="base_swipe_activity_style" />
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="base_activity_style" parent="android:Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="base_swipe_activity_style" parent="base_activity_style">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
