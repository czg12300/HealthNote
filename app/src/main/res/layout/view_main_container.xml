<fragment
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:name="com.jake.health.ui.fragment.HomeFragment"
    android:layout_height="match_parent"/>
    <com.jake.health.ui.widgt.materialdesign.FabButton
        android:id="@+id/fab_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/img_fab_add"
        app:backgroundTint="@drawable/selector_btn_fab" />

    <!-- Overlay that dims the screen -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6fffffff" />
    <!--android:background="#60000000" />-->

    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:orientation="vertical">

        <!-- Sheet that contains your items -->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_fab_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="16dp">

            <ListView
                android:id="@+id/lv_sheet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/trans"
                android:divider="@color/trans"
                android:dividerHeight="0dp" />

        </android.support.v7.widget.CardView>
    </io.codetail.widget.RevealLinearLayout>

</RelativeLayout>
