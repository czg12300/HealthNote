<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/trans"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.jake.health.ui.widgt.materialdesign.FabButton
        android:id="@+id/fab_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/img_fab_add"
        app:backgroundTint="@drawable/selector_btn_fab" />

    <!-- Overlay that dims the screen -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cfffffff" />

    <!-- Circular reveal container for the sheet -->
    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:orientation="vertical">

        <!-- Sheet that contains your items -->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_fab_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="50dp"
            >

            <!-- Sheet items -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sheet_item_recording"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_dialog_opt"
                    android:minHeight="45dp"
                    android:text="发表评论"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_content" />

                <!-- Reminder -->
                <TextView
                    android:id="@+id/fab_sheet_item_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_dialog_opt"
                    android:minHeight="45dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="发表评论"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_content" />

                <!-- Photo -->
                <TextView
                    android:id="@+id/fab_sheet_item_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_dialog_opt"
                    android:minHeight="45dp"
                    android:text="发表评论"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_content" />
                <TextView
                    android:id="@+id/fab_sheet_item_photoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/selector_btn_dialog_opt"
                    android:minHeight="45dp"
                    android:text="发表评论"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </io.codetail.widget.RevealLinearLayout>

</RelativeLayout>
