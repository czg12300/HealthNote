<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_load_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="45dip">

    <TextView
        android:id="@+id/tv_loading_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minWidth="50dp"
        android:padding="10dip"
        android:text="@string/load_more"
        android:textColor="@color/text_second"
        android:textSize="@dimen/text_size_tip" />

    <com.jake.health.ui.widgt.MaterialProgressBar
        android:id="@+id/mpb_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_loading_tips"
        android:visibility="gone" />
</RelativeLayout>