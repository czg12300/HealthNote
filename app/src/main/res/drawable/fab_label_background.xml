<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape >
            <solid android:color="#FFDBDADA" />
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white_7f" />
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp"/>
            <!--<stroke-->
                <!--android:width="0.5dp"-->
                <!--android:color="@color/trans_7f" />-->
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>
